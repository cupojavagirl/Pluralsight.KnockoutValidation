@{
    ViewBag.Title = "Conditional Validation";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper" style="height: 25px; padding-top: 15px; padding-bottom: 15px;">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
            </hgroup>
        </div>
    </section>
}

@section scripts
{
    <script src="~/ViewModels/IsPositiveNumberRule.js"></script>
    <script src="~/ViewModels/IndexViewModel.js"></script>

    <script type="text/javascript">
        (function() {
            var vm = new Ksj.Validation.IndexViewModel();
            var dom = $('#demoArea')[0];

            ko.applyBindingsWithValidation(vm, dom);

        })();
    </script>
}

<div id="demoArea">
    <div>
        <input type="checkbox" data-bind="checked: RequiresValidation"  />
        <input type="text" data-bind="value: ValueToValidate" placeholder="Enter something here"/>
    </div>
</div>